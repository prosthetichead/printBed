@model IEnumerable<PrintBed.Models.Print>

@{
    ViewData["Title"] = "Home Page";
}



<div class="container mb-3">
    <div class="accordion" id="filterAccordion">
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#filterCollapse">
                    <div class="d-flex align-items-center gap-2 flex-wrap">
                        <span class="fw-bold me-2">Filters</span>
                        @* Show Active Search Term *@
                        @if (!string.IsNullOrEmpty(ViewBag.Search))
                        {
                            <span class="badge bg-warning text-dark border">Search: "@ViewBag.Search"</span>
                        }
                        @* Show counts for active filters (checks the URL directly) *@
                        @if (Context.Request.Query["categories"].Count > 0)
                        {
                            <span class="badge bg-info text-dark">@Context.Request.Query["categories"].Count Categories</span>
                        }
                        @if (Context.Request.Query["creators"].Count > 0)
                        {
                            <span class="badge bg-info text-dark">@Context.Request.Query["creators"].Count Creators</span>
                        }
                        @if (Context.Request.Query["tags"].Count > 0)
                        {
                            <span class="badge bg-info text-dark">@Context.Request.Query["tags"].Count Tags</span>
                        }

                        @* Always show Sort Order *@
                        <span class="badge bg-light text-secondary border">
                            Sort: @(Context.Request.Query["sort"].FirstOrDefault() ?? "Name")
                            @(Context.Request.Query["direction"] == "DESC" ? "▼" : "▲")
                        </span>
                    </div>
                </button>
            </h2>

            <div id="filterCollapse" class="accordion-collapse collapse" data-bs-parent="#filterAccordion">
                <div class="accordion-body">
                    <form>
                        <div class="row row-cols-1 row-cols-md-3 g-3">
                            <div class="col">
                                <div class="form-group">
                                    <label class="control-label fw-bold small">Search</label>
                                    <input type="text" class="form-control" name="search" value="@ViewBag.Search" placeholder="Search..." />
                                </div>
                            </div>

                            <div class="col">
                                <div class="form-group">
                                    <label class="control-label fw-bold small">Categories</label>
                                    <select id="categories-select" name="categories" class="form-select" multiple asp-items="ViewBag.Categories"></select>
                                </div>
                            </div>

                            <div class="col">
                                <div class="form-group">
                                    <label class="control-label fw-bold small">Creators</label>
                                    <select id="creators-select" name="creators" class="form-select" multiple asp-items="ViewBag.Creators"></select>
                                </div>
                            </div>

                            <div class="col">
                                <div class="form-group">
                                    <label class="control-label fw-bold small">Tags</label>
                                    <select id="tags-select" name="tags" class="form-select" multiple asp-items="ViewBag.Tags"></select>
                                </div>
                            </div>
                            
                            <div class="col">
                                <div class="row">
                                    <label class="control-label fw-bold small">Sort By</label>
                                    <div class="col">
                                        <select id="sort-select" name="sort" class="form-select" asp-items="@ViewBag.SortList"></select>
                                    </div>
                                    <div class="col">
                                        <select id="direction-select" name="direction" class="form-select" asp-items="ViewBag.DirectionList"></select>
                                    </div>
                                </div>
                            </div>

                            <div class="col d-flex align-items-end justify-content-end">
                                <button type="submit" class="btn btn-primary w-100">Apply Filter</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mb-1 p-2">
    <div class="row row-cols-1 row-cols-md-2 row-cols-xl-4 g-3">
        @foreach (Print item in Model)
        {
            <div class="col">
                <div class="card h-100 card-hover text-bg-dark border-secondary" style="width: 100%">

                    <div class="img-wrapper rounded-top">
                        <a asp-action="Details" asp-controller="Prints" asp-route-id="@item.Id">
                            <img src="@GetPreviewImage(item)"
                                 class="card-img-top d-block w-100 object-fit-scale border-bottom border-secondary"
                                 style="height:300px;"
                                 alt="@item.Name">
                        </a>

                        <div class="position-absolute top-0 end-0 p-2">
                            <span class="badge badge-overlay shadow-sm">
                                @item.PrintFiles.Count() Files / @GetFormattedFileSize(item)
                            </span>
                        </div>
                    </div>

                    <div class="card-body py-3 text-center">

                        <h5 class="card-title text-truncate fw-bold mb-0 lh-base" title="@item.Name">
                            <a asp-action="Details" asp-controller="Prints" asp-route-id="@item.Id" class="text-white text-decoration-none stretched-link">
                                @item.Name
                            </a>
                        </h5>
                    </div>

                    <div class="card-body py-2 border-top border-secondary bg-transparent">
                        <div class="row text-center g-0">

                            <div class="col-6 border-end border-secondary">
                                <span class="d-block text-secondary text-uppercase fw-bold" style="font-size: 0.65rem; letter-spacing: 0.5px;">
                                    Category
                                </span>
                                <div class="d-flex align-items-center justify-content-center gap-1 mt-1 text-truncate px-1">
                                    <img src="@item.Category?.ImagePath" class="rounded-1" style="width: 20px; height: 20px; object-fit: cover;" />
                                    <span class="text-white small text-truncate" title="@item.Category?.Name">@item.Category?.Name</span>
                                </div>
                            </div>

                            <div class="col-6">
                                <span class="d-block text-secondary text-uppercase fw-bold" style="font-size: 0.65rem; letter-spacing: 0.5px;">
                                    Creator
                                </span>
                                <div class="d-flex align-items-center justify-content-center gap-1 mt-1 text-truncate px-1">
                                    <img src="@item.Creator?.ImagePath" class="rounded-1" style="width: 20px; height: 20px; object-fit: cover;" />
                                    <span class="text-white small text-truncate" title="@item.Creator?.Name">@item.Creator?.Name</span>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="card-footer bg-transparent border-secondary">
                        <div class="d-flex flex-wrap justify-content-center align-items-center gap-1" style="height: 50px; overflow: hidden;">
                            @if (item.PrintTags.Count > 0)
                            {
                                @foreach (PrintTag printTag in item.PrintTags.OrderBy(o => o.Tag.Name).Take(4))
                                {
                                    <span class="badge rounded-pill border border-info text-info bg-transparent" style="font-size: 10px;">
                                        @printTag.Tag.Name
                                    </span>
                                }

                                @if (item.PrintTags.Count > 4)
                                {
                                    <span class="badge rounded-pill bg-secondary text-white" style="font-size: 10px;">
                                        +@(item.PrintTags.Count - 4)
                                    </span>
                                }
                            }
                            else
                            {
                                <span class="badge rounded-pill border border-secondary text-secondary bg-transparent fst-italic">No Tags</span>
                            }
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
</div>


    <div class="row mt-2">
        <div class="col align-content-end text-end float-end">
            <nav class="float-end">
                <ul class="pagination pagination-sm ">
                    <li class="page-item">
                        <a href="javascript:void(0)" class="page-link @(ViewBag.CurrentPage<=1 ? "disabled" : "") pagination-page" data-page="@(ViewBag.CurrentPage - 1)">Previous</a>
                    </li>
                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item"><a href="javascript:void(0)" class="page-link @(ViewBag.CurrentPage==i ? "disabled" : "") pagination-page" data-page="@i">@i</a></li>
                    }
                    <li class="page-item">
                        <a href="javascript:void(0)" class="page-link @(ViewBag.CurrentPage>=ViewBag.TotalPages ? "disabled" : "") pagination-page" data-page="@(ViewBag.CurrentPage + 1)">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const categories_select = new UseBootstrapSelect(document.getElementById('categories-select'));
        const creators_select = new UseBootstrapSelect(document.getElementById('creators-select'));
        const tags_select = new UseBootstrapSelect(document.getElementById('tags-select'));
        const sort_select = new UseBootstrapSelect(document.getElementById('sort-select'));

        // Select all pagination links
        const paginationLinks = document.querySelectorAll('.pagination-page');

        // Add click event listener to each
        paginationLinks.forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault(); 
                // Stop if the button is visually disabled
                if (this.classList.contains('disabled')) return;

                const page = this.dataset.page; // Reads data-page="x"
                
                // 1. Get the current URL
                const url = new URL(window.location.href);
                // 2. Update ONLY the 'page' parameter
                url.searchParams.set('page', page);

                // 3. Reload the page with the new URL
                window.location.href = url.href;
            });
        });

    </script>
}


@functions {
    public string GetPreviewImage(PrintBed.Models.Print item)
    {
        // Try to find a file marked explicitly as "Preview"
        var preview = item.PrintFiles.FirstOrDefault(w => w.IsPreview == true);
        if (preview != null && preview.FileType?.PreviewType == "Image")
        {
            return preview.FilePath;
        }

        // If no preview, grab the first available image
        var anyImage = item.PrintFiles.FirstOrDefault(w => w.FileType?.PreviewType == "Image");
        if (anyImage != null)
        {
            return anyImage.FilePath;
        }

        // Fallback to placeholder
        return "/img/no-images.png";
    }

    public string GetFormattedFileSize(PrintBed.Models.Print item)
    {
        // 1. Handle empty or null cases immediately
        if (item.PrintFiles == null || !item.PrintFiles.Any()) return "0 B";

        // 2. Sum the total bytes
        double len = item.PrintFiles.Sum(s => s.FileSize);

        // 3. Define the units
        string[] sizes = { "B", "KB", "MB", "GB", "TB" };
        int order = 0;

        // 4. Divide by 1024 until the number is manageable
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }

        // 5. Return formatted string (0.## formats to 2 decimal places max)
        return $"{len:0.##} {sizes[order]}";
    }
}