@model PrintBed.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this category?</h3>
<div>
    <h4>@Html.DisplayNameFor(model => model.Name)</h4>
    <hr />

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        
            <p>@Model.Prints.Count() prints use this category and will need transfer to a new category </p>
            <select id="category-select" name="moveToId" multiple asp-items="ViewBag.CategoryId"></select>
        
        
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
