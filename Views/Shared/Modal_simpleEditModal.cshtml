<div id="simpleEditModal" class="modal fade" tabindex="-1" aria-labelledby="simpleEditModal-title" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow">

            <div class="modal-header">
                <h5 id="simpleEditModal-title" class="modal-title fw-bold">
                    Title Here
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form id="simpleEditModal-form">
                <div class="modal-body p-4">
                    <input type="hidden" name="id" id="simpleEditModal-id" />

                    <div class="form-floating mb-3">
                        <input type="text" name="name" id="simpleEditModal-name" class="form-control" placeholder="Name" required />
                        <label for="simpleEditModal-name">Name</label>
                    </div>

                    <div id="simpleEditModal-fileInputGroup" class="mb-3">
                        <label for="simpleEditModal-file" class="form-label text-muted small">Icon Image</label>
                        <input type="file" name="image" id="simpleEditModal-file" class="form-control" accept="image/*" />
                        <div class="form-text">
                            Select an image file to upload (optional).
                        </div>
                    </div>
                </div>

                <div class="modal-footer border-top-0">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary px-4" data-bs-dismiss="modal" id="simpleEditModal-ok">Save</button>
                </div>
            </form>

        </div>
    </div>
</div>