@model PrintBed.Models.Print

@{
    ViewData["Title"] = "Create";
}

<h1>Create New Print</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <div class="input-group">
                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                    <button class="btn btn-outline-success" type="button" id="btnAddCategory" data-bs-toggle="modal" data-bs-target="#categoryModal">+</button>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="CreatorId" class="control-label"></label>
                <div class="input-group">
                    <select id="CreatorId" asp-for="CreatorId" class="form-select" asp-items="ViewBag.CreatorId"></select>                    
                    <button class="btn btn-outline-success" type="button" id="btnAddCreator" data-bs-toggle="modal" data-bs-target="#creatorModal">+</button>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

